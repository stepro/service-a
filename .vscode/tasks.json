{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "azds: prelaunch",
            "command": "azds",
            "args": [
                "up",
                "--client=vscode",
                "--port=56927:9229",
                "--await-exec",
                "--keep-alive"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "azds: preattach",
            "command": "azds",
            "args": [
                "up",
                "--client=vscode",
                "--no-health-checks",
                "--port=56927:9229",
                "--sync-only",
                "--keep-alive",
                "--command=node_modules/.bin/nodemon",
                "--",
                "--inspect=0.0.0.0:9229",
                "--nolazy",
                "server.js"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        }
    ]
}