{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Local tasks
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [],
            "isBackground": true
        },
        // Mindaro tasks
        {
            // This is eventually done automatically by the extension
            // The output will appear in a "Mindaro" output window
            "label": "mindaro: daemon",
            "type": "process",
            "command": "mindaro",
            "args": [
                "daemon"
            ],
            "problemMatcher": [],
            "isBackground": true
        },
        {
            // This ensure the container is ready to execute commands
            "label": "mindaro: ready",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",            // implies a container-owned primary process
                "--incremental", // only rebuild the image if package.json changed
                "--no-command",  // don't run startup command, implies "--no-probe" option
                "--detach"       // the daemon will maintain local port connectivity
            ],
            "problemMatcher": []
        },
        {
            // This enables the long-running attach/detach experience for Node.js
            "label": "watch (mindaro)",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",            // implies a container-owned primary process
                "--incremental", // only rebuild the image if package.json changed
                "--port",
                "34839:9229",    // allocates a specific local port for the debugger
                "--no-probe",    // don't die if the debugger attaches and stops code
                "--detach",      // the daemon will maintain local port connectivity
                "nodemon",
                "--",                     // distinguishes up options from command options
                "--inspect=0.0.0.0:9229", // ensures container exposes the debug port
                "--nolazy",               // ensures the best debugging experience
                "server.js"               // taken from the package.json "main" property
            ],
            "problemMatcher": []
        }
    ]
}