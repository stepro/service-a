{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Local tasks
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [],
            "isBackground": true
        },
        // Mindaro tasks
        {
            // This is eventually done automatically by the extension
            // The output will appear in a "Mindaro" output window
            "label": "mindaro: daemon",
            "type": "process",
            "command": "mindaro",
            "args": [
                "daemon"
            ],
            "problemMatcher": [],
            "isBackground": true
        },
        {
            // This runs the container as a placeholder, enabling one-off commands
            "label": "mindaro: placeholder",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",            // implies a container-owned primary process
                "--incremental", // only rebuild the image if package.json changed
                "--placeholder", // wait for commands, implies "--no-probes" option
                "--detach"       // the daemon will maintain local port connectivity
            ],
            "problemMatcher": []
        },
        {
            // This is a Mindaro equivalent of the "npm: watch" task
            // We won't automatically produce this using our extension
            "label": "npm: watch (mindaro)",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",            // implies a container-owned primary process
                "--incremental", // only rebuild the image if package.json changed
                "--port",
                "34839:9229",    // allocates a specific local port for the debugger
                "--no-probes",   // don't die if the debugger attaches and stops code
                "--detach",      // the daemon will maintain local port connectivity
                "npm",
                "run",
                "watch",
                "--",                     // distinguishes up options from command options
                "--",                     // distinguishes npm options from script options
                "--inspect=0.0.0.0:9229", // ensures container exposes the debug port
                "--nolazy"                // ensures the best debugging experience
            ],
            "problemMatcher": []
        }
    ]
}