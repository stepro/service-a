{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "azds: prelaunch",
            "command": "azds",
            "args": [
                "up",
                "--client",
                "vscode",
                "--port",
                "58160:9229",
                "--await-exec"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "azds: preattach",
            "command": "azds",
            "args": [
                "up",
                "--client",
                "vscode",
                "--config",
                "develop.attach",
                "--port",
                "58160:9229",
                "--detach-after",
                "Debugger listening on",
                "--keep-existing",
                "--command",
                "node_modules/.bin/nodemon",
                "--",
                "--inspect=0.0.0.0:9229",
                "--nolazy",
                "server.js"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        }
    ]
}