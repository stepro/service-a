{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Local tasks
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [],
            "isBackground": true
        },
        // Mindaro tasks
        {
            // This is eventually done automatically by the extension
            // The output will appear in a "Mindaro" output window
            "label": "mindaro: daemon",
            "type": "process",
            "command": "mindaro",
            "args": [
                "daemon"
            ],
            "problemMatcher": [],
            "isBackground": true
        },
        {
            // This runs the container as a host, enabling one-off commands
            // It will only rebuild the image if package.json has changed
            "label": "mindaro: host",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",            // implies a container-owned primary process
                "--incremental", // if possible, only synchronize files
                "--host",        // sleep forever, implies "--unchecked" option
                "--detach"       // daemon maintains local port connectivity
            ],
            "problemMatcher": []
        },
        {
            // This is a Mindaro equivalent of the "npm: watch" task
            // We can't generate this from our extension, but it's possible
            "label": "npm: watch (mindaro)",
            "type": "process",
            "command": "mindaro",
            "args": [
                "up",            // implies a container-owned primary process
                "--incremental", // if possible, only synchronize files
                "--port",
                "34839:9229",    // ensures a specific local port for the debugger
                "--unchecked",   // required in case the debugger attaches and breaks
                "--detach",      // daemon maintains local port connectivity
                "npm",
                "run",
                "watch",
                "--",                     // required to append options to the script
                "--inspect=0.0.0.0:9229", // ensures container exposes the debug port
                "--nolazy"                // ensures the best debugging experience
            ],
            "problemMatcher": []
        }
    ]
}