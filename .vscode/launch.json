{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // Local configurations
        {
            "name": "Launch Process",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "develop",
                "--",
                "--inspect-brk"
            ],
            "port": 9229
        },
        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true
        },
        // Mindaro configurations
        {
            // This is the Mindaro equivalent of the "Launch Process" configuration
            "name": "Launch Process (mindaro)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "mindaro: host", // ensures hosting container is running
            "runtimeExecutable": "mindaro",
            "runtimeArgs": [
                "exec",       // implies a client-owned secondary process
                "--kill",
                "node",       // runs equivalent of "pkill -9 node" before execution
                "--port",
                "34839:9229", // ensures a specific local port for the debugger
                "node",
                "--",                     // required to append options to the command
                "--inspect=0.0.0.0:9229", // ensures container exposes the debug port
                "--inspect-brk",          // wait until debugger attaches before running
                "--nolazy",               // ensures the best debugging experience
                "server.js"               // taken from the package.json "main" property
            ],
            "port": 34839,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app" // depends on how the Dockerfile is written
        },
        {
            // This is the Mindaro equivalent of the "Attach to Process" configuration
            "name": "Attach to Process (mindaro)",
            "type": "node",
            "request": "attach",
            "preLaunchTask": "npm: watch (mindaro)", // ensures process is running
            "port": 34839,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app", // depends on how the Dockerfile is written
            "restart": true
        }
    ]
}